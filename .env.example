# Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to Git!

#============================================
# Database Configuration
#============================================
DB_URL=jdbc:mysql://localhost:3306/mallproject?serverTimezone=UTC&characterEncoding=UTF-8
DB_USERNAME=shoppingmall
DB_PASSWORD=your-password-here

#============================================
# JWT Configuration
#============================================
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your-base64-encoded-secret-minimum-32-bytes
JWT_EXPIRATION=1800000

#============================================
# Mail Configuration
#============================================
# Gmail 앱 비밀번호 사용 (https://support.google.com/accounts/answer/185833)
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here

#============================================
# Redis Configuration
#============================================
REDIS_HOST=localhost
REDIS_PORT=6379
